<div class="col-md-3">
  <%= link_to listing do %>
    <div class="card">
      <div class="view overlay hm-white-slight">

      <%= image_tag listing.image.url, width: '100%' %>

      </div>
      <div class="card-body">
        <h4 class="card-title"><%= listing.name %></h4>
        <p class="card-text">
          <%= listing.category %> <br>
          <%= listing.description %> <br>
          <%= listing.country %> <br>
          <%= number_to_currency listing.price %>
        </p>
      </div>
    </div>
  <% end %>
</div>