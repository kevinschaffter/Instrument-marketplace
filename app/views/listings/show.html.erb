<%= render partial: 'contact_modal' %>



<div class="row">
  <div class="col-md-6">
    <%= image_tag @listing.image.url, width: '100%', class: 'z-depth-2' %>

    <br/>
    <br/>

    <%= link_to "Back", listings_path, class: 'btn btn-md btn-indigo side listing-back-btn' %>
  </div>


  <div class="col-md-6">

    <h1><%= @listing.name %></h1>

    <h4 class="text-muted"><%= @listing.category.category %></h4>
    <hr>
    <p>
      <strong>Description:</strong>
      <%= @listing.description %>
    </p>

    <p>
      <strong>Location:</strong>
      <%= @listing.country %>
    </p>

    <p>
      <strong>Condition:</strong>
      <%= @listing.condition %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= number_to_currency @listing.price %>
    </p>


    <% if current_user == @listing.user %>

      <p><%= link_to 'Edit', edit_listing_path(@listing) %> </p>

    <% end %>

    <%= link_to "Contact Seller", root_path, class: 'btn btn-primary', 'data-toggle': 'modal', 'data-target': '#modalContactForm' %>

  </div>
</div>


