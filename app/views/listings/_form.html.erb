<%= form_with(model: listing, html: { multipart: true }, local: true) do |form| %>
  <% if listing.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved:</h4>

      <ul>
      <% listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :listing_name, class: "form-control" %>
  </div>


  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, id: :listing_category, class: "form-control" %>
  </div>

  
  <div class="form-group form-select">
    <%= form.label :category %>
    <%= select_tag :category_id, options_for_select(@categories), prompt: "Select One", class: "mdb-select colorful-select dropdown-primary form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :country %>
    <%= form.text_field :country, id: :listing_country, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.text_field :price, id: :listing_price, class: "form-control" %>
  </div>

  <div class="form-group">
    <label class="btn btn-secondary">
      Upload Image <%= form.file_field :image, style: 'display:none' %>
    </label>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
